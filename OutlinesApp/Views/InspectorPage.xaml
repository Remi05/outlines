<Page x:Class="OutlinesApp.Views.InspectorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OutlinesApp.Views"
      mc:Ignorable="d" 
      Loaded="OnLoaded"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InspectorPage">

    <Grid x:Name="Root">
        <Border Background="Black" Opacity="0.3" Visibility="{Binding IsBackdropVisible, Converter={StaticResource BoolToVisibility}, FallbackValue=Collapsed}" />
        <local:OutlinesOverlay Visibility="{Binding IsOverlayVisible, Converter={StaticResource BoolToVisibility}, FallbackValue=Visible}" />
        <local:ToolBar HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,12,0,0" />
        <Grid Margin="0,60,0,60">
            <StackPanel Width="200" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,16,0" Visibility="{Binding IsPropertiesPanelVisible, Converter={StaticResource BoolToVisibility}, FallbackValue=Visible}">
                <local:ColorPicker Margin="0,0,0,12" />
                <local:PropertiesPanel />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
