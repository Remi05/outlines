<UserControl x:Class="OutlinesApp.Views.ToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OutlinesApp.Views"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             Loaded="OnLoaded">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <Style x:Key="ToolBarStyle" TargetType="Border">
                <Setter Property="Background" Value="White" />
                <Setter Property="CornerRadius" Value="4" />
                <Setter Property="HorizontalAlignment" Value="Center" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Name="Root" HorizontalAlignment="Stretch">
        <Border Style="{StaticResource ToolBarStyle}" HorizontalAlignment="Stretch" Effect="{StaticResource SharedShadowEffect}" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <local:ToolBarButton Command="{Binding ToggleOverlayCommand}" Margin="3,0,3,0">
                <fa:FontAwesome Icon="Search" />
            </local:ToolBarButton>
            <local:ToolBarButton Command="{Binding TogglePropertiesPanelCommand}" Margin="3,0,3,0">
                <fa:FontAwesome Icon="List" />
            </local:ToolBarButton>
            <local:ToolBarButton Command="{Binding CloseAppCommand}" Margin="3,0,3,0">
                <fa:FontAwesome Icon="Close" />
            </local:ToolBarButton>
        </StackPanel>
    </Grid>
</UserControl>
