<UserControl x:Class="OutlinesApp.Views.OutlinesLayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OutlinesApp.Views"
             mc:Ignorable="d" 
             Loaded="OnLoaded"
             Background="Transparent"
             d:DesignHeight="450" d:DesignWidth="800">

    <Canvas x:Name="OutlinesCanvas">
        <Rectangle x:Name="SelectedElementOutline" 
            Stroke="#18A0FB"
            StrokeThickness="1"
            Canvas.Top="{Binding SelectedElementProperties.BoundingRect.Top}"
            Canvas.Left="{Binding SelectedElementProperties.BoundingRect.Left}"
            Width="{Binding SelectedElementProperties.BoundingRect.Width}"
            Height="{Binding SelectedElementProperties.BoundingRect.Height}" />

        <Rectangle x:Name="TargetElementOutline" 
            Stroke="#F24822"
            StrokeThickness="1"
            Canvas.Top="{Binding TargetElementProperties.BoundingRect.Top}"
            Canvas.Left="{Binding TargetElementProperties.BoundingRect.Left}"
            Width="{Binding TargetElementProperties.BoundingRect.Width}"
            Height="{Binding TargetElementProperties.BoundingRect.Height}" />
    </Canvas>
</UserControl>
